{
    "env": {
        "es2020": true,
        "node": true
    },
    "plugins": [
      "plugin:prettier/recommended"
    ],
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-unused-vars": "warn",
      "no-unused-expressions": "warn",
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never"
        }
      ]
    },
    "settings": {
	    "import/resolver": {
	      "typescript": {}
	    }
	  }
}
